<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_7sdp"
    android:layout_marginStart="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp">

        <ImageView
            android:id="@+id/adapterRecyclerHome_img_picture"
            android:layout_margin="@dimen/_5sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/splashtet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/adapterRecyclerHome_linear_download"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_download"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/Black"
                    android:text="Táº£i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/adapterRecyclerHome_txt_download"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/Black"
                    android:text="(5)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adapterRecyclerHome_linear_share"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_share"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/Black"
                    android:text="Share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/adapterRecyclerHome_txt_share"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/Black"
                    android:text="(5)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/adapterRecyclerHome_linear_upload"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_share"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp" />
                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/Black"
                    android:text="Up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/adapterRecyclerHome_txt_upload"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/Black"
                    android:text="(5)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>